<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <com.hbhgdating.slider.SliderLayout
        android:id="@+id/sliderfull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        android:visibility="gone"
        android:scaleType="fitXY" />
    <com.hbhgdating.slider.SliderLayout
        android:id="@+id/sliderfull2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        android:visibility="gone"
        android:scaleType="fitXY" />
    <com.hbhgdating.slider.SliderLayout
        android:id="@+id/sliderfull3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        android:visibility="gone"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/imgfull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="center"
        android:src="@drawable/no_img"
        android:visibility="gone"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/relativeLayoutfull">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/edit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imgBlockUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/block_user_96"
                        android:padding="3dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/imgReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rep96"
                        android:padding="3dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Name, Age, Gender, Location"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/imgSexualOriante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_toLeftOf="@+id/edit_layout"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/straight_female_w"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_below="@+id/rl1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <RelativeLayout
                android:id="@+id/relVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/sqaure_border"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@mipmap/glass_tint"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name" />

                <com.hbhgdating.utils.ScalableVideoView
                    android:id="@+id/videoView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />

                <com.hbhgdating.slider.SliderLayout
                    android:id="@+id/slider2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/image2Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@mipmap/rename_96"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relvideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@mipmap/glass_tint"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name" />

                <com.hbhgdating.utils.ScalableVideoView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />

                <com.hbhgdating.slider.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/image1Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@mipmap/rename_96"
                    android:contentDescription="@string/app_name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relVideo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginStart="0.5dp"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:background="@drawable/sqaure_border"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@mipmap/glass_tint"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name" />

                <com.hbhgdating.utils.ScalableVideoView
                    android:id="@+id/videoView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />

                <com.hbhgdating.slider.SliderLayout
                    android:id="@+id/slider3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/image3Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@mipmap/rename_96"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/eats_img"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@mipmap/button_eat2"/>
                <ImageView
                    android:id="@+id/loves_img"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:src="@mipmap/button_love2"/>
                <ImageView
                    android:id="@+id/listens_img"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/button_listen2"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl3"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </android.support.v4.view.ViewPager>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>