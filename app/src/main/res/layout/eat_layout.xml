<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/rl4_eats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/relfood1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/sqaure_border"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/imgFood1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:layout_weight="1"

                    android:src="@mipmap/pizza" />

                <TextView
                    android:id="@+id/txtFood1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imgFood1"
                    android:background="@color/lightgraycolor"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:layout_weight="5"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relfood2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/sqaure_border"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/imgFood2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:src="@mipmap/pizza" />

                <TextView
                    android:id="@+id/txtFood2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imgFood2"
                    android:background="@color/lightgraycolor"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relfood3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/sqaure_border"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/imgFood3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:src="@mipmap/pizza" />

                <TextView
                    android:id="@+id/txtFood3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imgFood3"
                    android:background="@color/lightgraycolor"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/textcolor" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>